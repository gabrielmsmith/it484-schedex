%employee_body#employees
    %employee_actions
        %ul.emp_actions
            %li.emp
                %a{:href => "#"} Add Employee
    %table
        %thead
            %tr
                %th First Name
                %th Last Name
                %th Address
                %th Phone Number
                %th Emp Type
                %th DOB
            %tbody
                -   @employees.each do |emp|
                    %tr
                        %td= emp.first_name
                        %td= emp.last_name
                        %td= emp.address
                        %td= emp.phone_number
                        %td= emp.employee_type
                        %td= emp.dob
                        %td= link_to 'Delete', employee_path(emp), :method => :delete
                        
= link_to 'Add new Employee', new_employee_path
