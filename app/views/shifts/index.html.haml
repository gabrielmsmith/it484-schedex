// Schedule Index
%employee_body#shifts
    %table
        %thead
            %tr
                %th Shift Type
                %th Monday
                %th Tuesday
                %th Wednesday
                %th Thursday
                %th Friday
                %th Saturday
                %th Sunday
            %tbody
                %tr
                    %td Manager
                    -   Shift.get_shifts("Manager","Lunch").each do |shift|
                        - if shift.emp_id == "0"
                            %td= link_to Shift.get_employee_name(shift.emp_id), shift_path(shift), method: :put, :data => {:confirm => 'Take open shift?'}, class: 'Link-Shift'
                        - else
                            %td= link_to Shift.get_employee_name(shift.emp_id), edit_shift_path(shift), class: 'Link-Shift'
