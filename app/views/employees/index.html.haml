%employee_body#employees
    %employee_actions
        %ul.emp_actions
            %li.emp
                %a{:href => new_employee_path} NEW EMPLOYEE
    %table
        %thead
            %tr
                %th First Name
                %th Last Name
                %th Address
                %th Phone Number
                %th Emp Type
                %th DOB
                - if Employee.find_by(:uid => session[:user_id]).employee_type == 'Manager'
                    %th Options
            %tbody
                -   @employees.each do |emp|
                    %tr
                        %td= emp.first_name
                        %td= emp.last_name
                        %td= emp.address
                        %td= emp.phone_number
                        %td= emp.employee_type
                        %td= emp.dob
                        %td 
                            - if Employee.find_by(:uid => session[:user_id]).employee_type == 'Manager'
                                - if emp.uid != session[:user_id].to_s 
                                    = link_to 'Delete', employee_path(emp), :method => :delete
                                    
                                    = link_to 'Edit', edit_employee_path(emp)
                                - else
                                    = link_to 'Edit', edit_employee_path(emp)
                            - else
                                = link_to 'Edit', edit_employee_path(emp)
                               
