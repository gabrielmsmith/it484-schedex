%employee_body#employees
    %employee_actions
        %ul.emp_actions
            %li.emp
                %a{:href => new_employee_path} NEW EMPLOYEE
                %a{:href => new_request_path} REQUEST SHIFT
    %table
        %tr
            %th FIRST NAME
            %th LAST NAME
            %th ADDRESS
            %th PHONE NUMBER
            %th EMPLOYEE TYPE
            %th DATE OF BIRTH
            %th
            %th
        %tbody
            -   @employees.each do |emp|
                %tr.row_info
                    %td= emp.first_name
                    %td= emp.last_name
                    %td= emp.address
                    %td= emp.phone_number
                    %td= emp.employee_type
                    %td= emp.dob
                    %td.option{:href => "#"}
                        %p Edit
                    %td.option{:href => "#"}
                        %p Delete

                            
