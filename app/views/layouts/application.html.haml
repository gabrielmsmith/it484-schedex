!!!
%html
  %head
    %title SchedEx
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %topnavbar
    %navbar
      %ul.navbar-right
        %right-content
          %li.nav.dropdown.notifications
            %a.dropbtn{"data-toggle" => "dropdown_notifications", href: "#"}
              Notifications
              %span.caret
            %ul.dropdown-content{:role => "menu"}
              %li
                %a{:href => "#"} Garret Ardolf requests to change shifts.
              %li
                %a{:href => "#"} Josh Collstrom approved shift change.
              %li
                %a{:href => "#"} Nick Beernick requests to trade shifts with Jeremy Klein.
              %li
                %a{:href => "#"} Garret Ardolf denied your shift request.
          %li.nav.dropdown.user
            %a.dropbtn{"data-toggle" => "dropdown_user", href: "#"}
              - if @current_user
                Welcome, #{@current_user.name}
              %span.caret
            %ul.dropdown-content{:role => "menu"}
              %li
                %a{:href => "#"} Profile
              %li
                - if @current_user
                  = link_to 'Logout', logout_path, :method => :post
      %ul.navbar-left
        %li.brand
          %a{:href => "/home/index"} SchedEx
        %li.nav.active
          %a{:href => "/home/index"} Home
        %li.nav
          %a{:href => "/schedule/index"} Schedule
        %li.nav
          %a{:href => "/employees"} Employees

    %body 
      = yield
      
      %flash_container
        = flash[:notice]
        = flash[:warning]
      
    %footer
      %container.foot
        %p.footer SchedEx