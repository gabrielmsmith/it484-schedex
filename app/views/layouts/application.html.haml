!!!
%html
  %head
    %title SchedEx
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %topnavbar
    %navbar{ :style => "color: #ffbfb2;" }
      %ul.navbar-right
        %right-content
          %li.nav.dropdown.notifications
            %a.dropbtn{"data-toggle" => "dropdown_notifications", href: "#"}
              Notifications
              %span.caret
            %ul.dropdown-content{:role => "menu"}
              %li
                %a{:href => requests_path} Garret Ardolf requests to change shifts.
              %li
                %a{:href => requests_path} Josh Collstrom approved shift change.
              %li
                %a{:href => requests_path} Nick Beernick requests to trade shifts with Jeremy Klein.
              %li
                %a{:href => requests_path} Garret Ardolf denied your shift request.
          %li.nav.dropdown.user
            %a.dropbtn{"data-toggle" => "dropdown_user", href: "#"}
              - if @current_user
                Welcome, #{@current_user.name}
              %span.caret
            %ul.dropdown-content{:role => "menu"}
              %li
                %a{:href => "#"} Profile
              %li
                - if @current_user
                  = link_to 'Logout', logout_path, :method => :post
      %ul.navbar-left
        %li.brand
          %a{:href => "/home/index"} SchedEx
        %li.nav
          %a{:href => "/home/index"} Home
        %li.nav
          %a{:href => shifts_path} Schedule
        %li.nav
          %a{:href => employees_path} Employees

    %body
      %div.flash_succss
        %div.success
          - if flash[:success]
            .alert.alert-success.alert-dismissible{role: "alert"}
              %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
                %span{"aria-hidden" => "true"} ×
              = flash[:success]
      %div.flash_info        
        %div.info      
          - if flash[:info]
            .alert.alert-info.alert-dismissible{role: "alert"}
              %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
                %span{"aria-hidden" => "true"} ×
              = flash[:info]
      %div.flash_warning        
        %div.warning  
          - if flash[:warning]
            .alert.alert-warning.alert-dismissible{role: "alert"}
              %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
                %span{"aria-hidden" => "true"} ×
              = flash[:warning]
      %div.flash_danger        
        %div.danger
          - if flash[:danger]
            .alert.alert-danger.alert-dismissible{role: "alert"}
              %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
                %span{"aria-hidden" => "true"} ×
              = flash[:danger]
      = yield
-#
    %footer
      %container.foot
        %p.footer SchedEx